<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.mssinfotech.iampro.co">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:fullBackupContent="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".MainApplication"
    android:supportsRtl="false"
    android:theme="@style/AppTheme"
    tools:replace="android:supportsRtl">
    <activity
      android:label="@string/app_name"
      android:name=".activities.MainActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".activities.PhotoDetailActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"/>
    <activity
      android:name=".activities.VideoDetailActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"/>
    <activity
      android:label="@string/profile"
      android:launchMode="singleTop"
      android:name=".activities.UserDetailsActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"/>
    <activity
      android:name=".activities.LoginActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.Login"/>
    <activity
      android:label="@string/product_details"
      android:launchMode="singleTop"
      android:name=".activities.ProductDetailActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:label="@string/update_profile"
      android:name=".activities.UpdateProfileActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:label="@string/change_password"
      android:name=".activities.ChangePasswordActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:label="@string/join_friend"
      android:name=".activities.JoinFriendActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
      android:label="@string/image_gallery"
      android:name=".activities.ImageGalleryActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>