<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>
      <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@id/tvCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        tools:text="@tools:sample/lorem/random"/>
      <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/civAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/civAvatar"
        tools:text="@tools:sample/lorem/random"/>

      <View
        android:id="@+id/viewDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civAvatar"/>

      <ImageView
        android:id="@+id/ivAddress"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_home_black_24dp"
        android:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDivider"/>

      <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivAddress"
        app:layout_constraintTop_toBottomOf="@id/viewDivider"
        tools:text="@tools:sample/lorem/random"/>

      <android.support.v7.widget.GridLayout
        android:id="@+id/glDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:columnCount="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress"
        app:rowCount="3">

        <Button
          android:id="@+id/btnImages"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_image_black_24dp"
          android:text="images"
          android:textColor="@android:color/black"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_row="0"
          app:layout_rowWeight="1"/>

        <Button
          android:id="@+id/btnVideos"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_video_library_black_24dp"
          android:text="Videos"
          app:layout_column="1"
          app:layout_columnWeight="1"
          app:layout_row="0"
          app:layout_rowWeight="1"/>

        <Button
          android:id="@+id/btnProducts"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_shopping_basket_black_24dp"
          android:text="Products"
          app:layout_column="2"
          app:layout_columnWeight="1"
          app:layout_row="0"
          app:layout_rowWeight="1"/>

        <Button
          android:id="@+id/btnFriends"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_user_group_black_24dp"
          android:text="Friends"
          app:layout_column="0"
          app:layout_columnWeight="1"
          app:layout_row="1"
          app:layout_rowWeight="1"/>

        <Button
          android:id="@+id/btnProvide"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_file_document_black_24dp"
          android:text="Provide"
          app:layout_column="1"
          app:layout_columnWeight="1"
          app:layout_row="1"
          app:layout_rowWeight="1"/>

        <Button
          android:id="@+id/btnDemand"
          style="@style/Base.Widget.AppCompat.Button.Borderless"
          android:drawableTop="@drawable/ic_bow_tie_black_24dp"
          android:text="Demand"
          app:layout_column="2"
          app:layout_columnWeight="1"
          app:layout_row="1"
          app:layout_rowWeight="1"/>

      </android.support.v7.widget.GridLayout>
      <View
        android:id="@+id/viewDivider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/dividerColor"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glDetails"/>
      <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
      <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnRemoveFriend"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider2"/>
      <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSendMessage"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Message"
        android:drawableStart="@drawable/ic_message_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider2"/>

    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</layout>